<h2 class="span12">Sign up</h2>
<div class="span12">
<%= form_for(resource, :as => resource_name,
      :url => registration_path(resource_name),
      :html => { :class => "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.fields_for :company_attributes do |c| %>
      <%= c.label "Company name", :class =>"control-label"%>
      <div class="controls">
        <%= c.text_field :name, value: resource.company_name %>
      </div>
    <% end -%>
  </div>

  <div class="control-group">

    <%= f.label :first_name, :class =>"control-label"%>
    <div class="controls"><%= f.text_field :first_name %></div>
  </div>

  <div class="control-group">
    <%= f.label :last_name, :class =>"control-label"%>
    <div class="controls"><%= f.text_field :last_name %></div>
  </div>

  <div class="control-group">
    <%= f.label :email, :class =>"control-label"%>
    <div class="controls"><%= f.email_field :email %></div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class =>"control-label"%>
    <div class="controls"><%= f.password_field :password %></div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, :class =>"control-label"%>
    <div class="controls"><%= f.password_field :password_confirmation %></div>
  </div>

  <div class="control-group">
    <div class="controls"><%= f.submit "Sign up" %></div>

<% end %>
    <br>
    <div class="controls"><%= render "devise/shared/links" %></div>
  </div>
</div>