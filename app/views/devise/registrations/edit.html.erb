<div class="row">

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
   :html => { :method => :put, :class => "form-horizontal span8 offset1"}) do |f| %>
    <%= devise_error_messages! %>
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <div class="control-group">
      <%= f.fields_for :company_attributes do |c| %>
        <%= c.label "Company name", :class =>"control-label" %>
        <div class="controls">
          <%= c.text_field :name, value: resource.company_name %>
        </div>
      <% end -%>
    </div>

    <div class="control-group">
      <%= f.label :first_name, :class =>"control-label"%>
      <div class="controls"><%= f.text_field :first_name %></div>
    </div>

    <div class="control-group">
      <%= f.label :last_name, :class =>"control-label"%>
      <div class="controls"><%= f.text_field :last_name %></div>
    </div>

    <div class="control-group">
      <%= f.label :email, :class =>"control-label"%>
      <div class="controls"><%= f.email_field :email, :autofocus => true %></div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="control-group">
      <%= f.label :password, :class =>"control-label"%>

      <div class="controls">
        <%= f.password_field :password, :autocomplete => "off" %>
        <i> (leave blank if you don't want to change it)</i>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, :class =>"control-label"%>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :current_password, :class =>"control-label"%>

      <div class="controls">
        <%= f.password_field :current_password%>
        <i> (we need your current password to confirm your changes)</i>
      </div>
    </div>

    <div class="control-group">
      <div class="controls"><%= f.submit "Update", :class=>"btn btn-primary" %>
        <span> or</span>
        <%= link_to "Cancel", root_path, :class=>"btn btn-link"%>
      </div>
    </div>
  <% end %>

    <div class ="span3 pull-right">

        <h4>Cancel my account</h4>

        <label class ="control-label">Unhappy?</label>
        <div class="controls">
          <%= button_to "Cancel my account", registration_path(resource_name),
          :data => { :confirm => "Are you sure?" }, :method => :delete, :class=>"btn btn-link" %>
        </div>

    </div>

</div>
